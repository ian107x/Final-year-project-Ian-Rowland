<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        tools:context=".QuestionnaireActivity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/instructiontext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/questionnaireInstructionText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text = "@string/q1Text"
                android:autoSizeTextType="uniform"
                />

            <Spinner
                android:id="@+id/q1list"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:entries="@array/wasGameEnjoyed"
                android:entryValues="@array/wasGameEnjoyed"
                android:layout_height="match_parent"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"

            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text = "@string/q2Text"
                android:autoSizeTextType="uniform"
                />
            <Spinner
                android:id="@+id/q2list"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:entries="@array/amountOfControl"
                android:entryValues="@array/amountOfControl"
                android:layout_height="match_parent"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text = "@string/q3Text"
                android:autoSizeTextType="uniform"
                />
            <Spinner
                android:id="@+id/q3list"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:entries="@array/controlOverTime"
                android:entryValues="@array/controlOverTime"
                android:layout_height="match_parent"

                />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:id="@+id/returntomainbutton"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbg"
                android:text="@string/submitAnswersText">

            </Button>

        </LinearLayout>





    </RelativeLayout>
</ScrollView>