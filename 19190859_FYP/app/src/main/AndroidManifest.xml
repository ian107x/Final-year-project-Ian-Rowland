<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.19190859_FYP"
        tools:targetApi="31">
        <activity
            android:name=".SetDifficultyActivity"
            android:exported="false"
            android:label="@string/title_activity_set_difficulty"
            android:theme="@style/Theme.19190859_FYP.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.19190859_FYP.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".GameRulesActivity"
            android:label="Game Rules Activity"
            android:theme="@style/Theme.19190859_FYP.NoActionBar"/>
        <activity
            android:name=".gamePlayActivity"
            android:label="Gameplay activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".viewDataActivity"
            android:label="View Data"
            android:theme="@style/Theme.19190859_FYP.NoActionBar"/>
        <activity
            android:name=".gameOverActivity"
            android:label="Game Over"
            android:theme="@style/Theme.19190859_FYP.NoActionBar"/>
        <activity
            android:name=".QuestionnaireActivity"
            android:label="Game Over"
            android:theme="@style/Theme.19190859_FYP.NoActionBar"
            />
    </application>

</manifest>