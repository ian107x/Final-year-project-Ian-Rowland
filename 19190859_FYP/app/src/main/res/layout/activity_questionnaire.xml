<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        tools:context=".QuestionnaireActivity" >

        <TextView
            android:id="@+id/instructiontext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Please answer the below questions."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:gravity="center">


            <Button
                android:id="@+id/q1button"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbg"
                android:text="po">

            </Button>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text = "Did you enjoy the game?"
                android:autoSizeTextType="uniform"
                />

            <Spinner
                android:id="@+id/q1list"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:entries="@array/wasGameEnjoyed"
                android:entryValues="@array/wasGameEnjoyed"
                android:layout_height="match_parent"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:gravity="center">


            <Button
                android:id="@+id/q2button"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbg"
                android:text="po">

            </Button>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text = "How much control did you feels you had over the game?"
                android:autoSizeTextType="uniform"
                />
            <Spinner
                android:id="@+id/q2list"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:entries="@array/amountOfControl"
                android:entryValues="@array/amountOfControl"
                android:layout_height="match_parent"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:gravity="center">


            <Button
                android:id="@+id/q3button"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:background="@drawable/buttonbg"
                android:text="po">

            </Button>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text = "Did you feel like your control over the game increased or decreased over time?"
                android:autoSizeTextType="uniform"
                />
            <Spinner
                android:id="@+id/q3list"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:entries="@array/controlOverTime"
                android:entryValues="@array/controlOverTime"
                android:layout_height="match_parent"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            >

            <Button
                android:id="@+id/setinfobutton"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbg"
                android:text="po">

            </Button>
            <Button
                android:id="@+id/returntomainbutton"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbg"
                android:text="po">

            </Button>

        </LinearLayout>





    </RelativeLayout>
</ScrollView>